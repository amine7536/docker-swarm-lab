# {{ app_settings['APP_NAME'] }}
# -
# Nginx Configuration
# Do not edit by hand unless you know what your doing

server {
        listen 443;

        server_name {{ app_settings['APP_URL'] }};

        ssl on;
        ssl_certificate /etc/letsencrypt/live/{{ app_settings['APP_URL'] }}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/{{ app_settings['APP_URL'] }}/privkey.pem;

        location / {
            proxy_pass http://localhost:{{ app_settings['APP_PORT'] }};
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_cache_bypass $http_upgrade;
        }

	location /nginx_status {
    	    stub_status on;
	}
}
